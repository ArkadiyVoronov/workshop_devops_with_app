# ==========================================
# Core Application Settings
# ==========================================
FLASK_ENV=development
SECRET_KEY=change-me-in-production
PORT=5000

# ==========================================
# Database Configuration
# ==========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=workshop
POSTGRES_DB=fintech_workshop
DATABASE_URL=postgresql://postgres:workshop@db:5432/fintech_workshop

# ==========================================
# Failure Injection Modes (для образовательных целей)
# ==========================================
# Режимы: none, frontend_error, backend_latency, db_pool_exhaustion, 
#         memory_leak, security_vulnerable, circuit_breaker
FAILURE_MODE=none

# Задержка ответа бэкенда в миллисекундах
BACKEND_LATENCY_MS=0

# Размер пула соединений БД (для демонстрации исчерпания)
DB_POOL_SIZE=10

# Утечка памяти в МБ на запрос
MEMORY_LEAK_MB_PER_REQUEST=0

# Включить уязвимости SQL-инъекции (только для обучения!)
SQL_INJECTION_VULNERABLE=false

# Конфигурация frontend ошибок (JSON)
FRONTEND_FAILURE_CONFIG={"RENDER_ERROR": false, "INFINITE_LOADING": false}

# ==========================================
# Observability Settings
# ==========================================
ENVIRONMENT=workshop
LOG_LEVEL=INFO
PROMETHEUS_RETENTION=7d

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=workshop

# ==========================================
# Scaling Configuration
# ==========================================
# Количество реплик приложения (требует nginx)
APP_REPLICAS=1

# ==========================================
# Security
# ==========================================
# Включить режим только для чтения для демонстраций
READ_ONLY_MODE=false
